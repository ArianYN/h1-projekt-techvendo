@using ProductClassLibrary

<div class="card" style="max-width: 940px;">
    <div class="card-body">
        <h1>@SellingProduct.Series @SellingProduct.Title - @SellingProduct.Price$ </h1> 
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        border: 2px solid grey;
        background-color: #424242;
    }

    .card-body {
        padding: 10px;
    }

    h1 {
        font-size: 20px;
        margin: 0; /
    }

    .arrow {
        float: left;
        padding: 20px;
    }
</style>

@code {
    [Parameter] public ProductClass SellingProduct { get; set; }
}
